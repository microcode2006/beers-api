    "/api/v{version}/beers": {
      "get": {
        "tags": [
          "Beers"
        ],
        "summary": "Get all beers that match the beerName and paging query string",
        "operationId": "Beers_GetBeersAsync",
        "consumes": [],
        "produces": [
          "application/json",
          "text/json",
          "application/xml",
          "text/xml"
        ],
        "parameters": [
          {
            "name": "version",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "int32",
            "default": "1",
            "description": "API version"

          },
          {
            "name": "queryFilter.beerName",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "beer name to search for"
          },
          {
            "name": "queryFilter.page",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int32",
            "default": 1,
            "description": "page number"
          },
          {
            "name": "queryFilter.perPage",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int32",
            "default": 5,
            "minimum": 1,
            "maximum": 25,
            "description": "number of records per page"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns a list of paged beers that match the beerName query string ",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Vintri.Beers.Core.Models.BeerRatingsResponse"
              }
            }
          },
          "400": {
            "description": "Invalid beer name or paging parameters",
            "schema": {
              "$ref": "#/definitions/Vintri.Beers.Core.Models.ErrorResult"
            }
          },
          "408": {
            "description": "Request timed out or cancelled",
            "schema": {
              "$ref": "#/definitions/Vintri.Beers.Core.Models.ErrorResult"
            }
          },
          "500": {
            "description": "Internal errors occurred",
            "schema": {
              "$ref": "#/definitions/Vintri.Beers.Core.Models.ErrorResult"
            }
          }
        }
      }
    },
