          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json",
          "text/json",
          "application/xml",
          "text/xml"
        ],
        "parameters": [
          {
            "name": "beerId",
            "in": "path",
            "description": "Beer id rated by user",
            "required": true,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "userRating",
            "in": "body",
            "description": "User rating details",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Vintri.Beers.Core.Models.UserRating"
